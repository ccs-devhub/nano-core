{
  "name": "@ccs-devhub/nano-core",
  "version": "0.1.0",
  "description": "Lightweight, free-software modular core for Discord bots, designed for simple injection of commands and features, with a strong focus on adaptability and community-driven collaboration.",
  "author": {
    "name": "Cyber Code Syndicate (CCS)",
    "url": "https://github.com/ccs-devhub"
  },
  "maintainers": [
    {
      "name": "Cristian D. Moreno - Kyonax",
      "url": "https://github.com/kyonax"
    }
  ],
  "keywords": [
    "discord",
    "discord-bot",
    "discord.js",
    "modular",
    "bot-core",
    "cyber-code-syndicate",
    "ccs"
  ],
  "license": "MPL-2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "doc": "docs",
    "test": "tests",
    "lib": "src"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "precommit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix"
  },
  "dependencies": {
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jiti": "^2.6.1",
    "vite-tsconfig-paths": "^6.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-formatter-unix": "^9.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-prefer-optional-chaining": "^0.0.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
