{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["src/*"],
            "@/misc/*": ["src/lib/misc/*"],
            "@/constants/*": ["src/lib/constants/*"],
            "@/commands/*": ["src/core/commands/*"],
            "@/events/*": ["src/core/events/*"],
            "@/snippets/*": ["src/lib/snippets/*"]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "dist"
    ]
}
