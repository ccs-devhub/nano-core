{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "dist"
    ]
}
